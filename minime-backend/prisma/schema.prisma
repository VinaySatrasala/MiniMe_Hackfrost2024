datasource db {
  provider = "postgresql"  // Use your preferred DB (e.g., postgresql, mysql, sqlite)
  url      = env("DATABASE_URL") // Database connection URL
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int      @id @default(autoincrement())
  email             String   @unique
  password          String
  firstName         String?
  lastName          String?
  createdAt         DateTime @default(now())
  consumerKey       String?  // Twitter Consumer Key
  consumerSecret    String?  // Twitter Consumer Secret
  oauthToken        String?  // OAuth Token
  oauthTokenSecret  String?  // OAuth Token Secret
  mediumToken       String?  // Medium Token
}
